{
  "compilerOptions": {
    "target": "ES2020", 
    "lib": ["ES2020"], 
    "module": "CommonJS", 
    "rootDir": ".", 
    "outDir": "./dist", 
    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "forceConsistentCasingInFileNames": true, 

    "strict": true,

    "skipLibCheck": true, 
    "types": ["node"] 
  },
  "include": ["src/**/*", "prisma/seed.ts"], 
  "exclude": ["node_modules"] 
}